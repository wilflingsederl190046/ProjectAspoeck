@using ProjectAspoeck.Models

@model ProjectAspoeck.Models.Shopping_BasketModel
@{
    ViewData["Title"] = "Warenkorb";
}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Warenkorb</title>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <style>
        .header {
            height: 150px;
            display: flex;
            align-items: center;
            background-color: #f2f2f2;
        }

        .header-image {
            padding-left: 50px;
            height: 100%;
        }

        .text-center-last-col{
            display: flex;
            justify-content: center;
        }

        img {
            max-width: 100%;
            max-height: 100%;
            display: block;
        }

        .header-text {
            text-align: center;
        }

        .btn {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .table th,
        .table td {
            font-size: 1.2rem;
        }

        .headline {
            padding-top: 10px;
        }
    </style>
</head>
<body>
    <header class="bg-light py-3" style="height: 150px">
        <div class="container-fluid h-100">
            <div class="row align-items-center h-100">
                <div class="col-3 header-image">
                    <img src="~/Images/aspoeck-logo-sm.png"
                         class="img-fluid align-middle"
                         alt="Logo" />
                </div>
                <div class="col-6 header-text">
                    <h1 class="mb-0">Jausen Bestellung</h1>
                </div>
                <div class="col-3 text-center py-2 ">
                    <span class="header-button">
                        @using (Html.BeginForm("Settings", "Home", new { sessionKey = Model.SessionString }, FormMethod.Post))
                                    {
                            <button type="submit" class="btn btn-lg">
                            <i class="fa fa-gear"></i>
                        </button>
                        }
                        
                    </span>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <div class="col headline">
                <h4>Warenkorb</h4>
            </div>
        </div>
        <div class="row mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Bild</th>
                            <th scope="col">Artikel</th>
                            <th scope="col">Preis</th>
                            <th scope="col">Anzahl</th>
                            <th scope="col">Gesamt</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <th scope="row">
                                <img src="" alt="@item.Item.Name" />
                            </th>
                            <td class="itemName">@item.Item.Name</td>
                            <td class="price">@item.Item.Price €</td>
                            <td class="stueck">@item.Quantity</td>


                            <td class="allPrice">
                                @{
                                    var priceString = new string(item.Item.Price.ToString().Where(char.IsDigit).ToArray());
                                    var price = double.Parse(priceString)/10;
                                    var total = price * item.Quantity;
                                }
                                @total €
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6 text-left">
                @using (Html.BeginForm("Place_Order", "Home", new { sessionKey = Model.SessionString }, FormMethod.Post))
                {
                  <button href="#" class="btn btn-warning">Zurück</button>
                }
            </div>
            <div class="col-6 text-right">
                <button href="#" class="btn btn-success">Bestellung aufgeben</button>
            </div>
        </div>
    </div>
</body>
</html>
