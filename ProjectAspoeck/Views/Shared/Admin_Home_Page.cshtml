@using ProjectAspoeck.Models
@using Microsoft.IdentityModel.Tokens
@model ProjectAspoeck.Models.Admin.HomePageModelAdmin
@{
    ViewData["Title"] = "Admin-Startseite";
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Jausen Bestellung</title>
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"/>
    <script src="https://kit.fontawesome.com/afdaaa5e13.js" crossorigin="anonymous"></script>
    <style>
        .header-image {
            padding-left: 50px;
            height: 100%;
        }

        img {
            max-width: 100%;
            max-height: 100%;
            display: block;
        }

        .header-text {
            padding-right: 50px;
            text-align: center;
        }

        .header-right-text,
        .btn {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .table td {
            font-size: 1.2rem;
        }

        .table th {
            font-weight: bold;
            font-size: 1.2rem;
        }

        .col-md-3 {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            min-height: 70vh;
        }
        
        .col-md-3 button {
            width: 350px;
        }
    </style>
</head>
<body>
<!-- Header -->
<header class="bg-light py-3" style="height: 150px">
    <div class="container-fluid h-100">
        <div class="row align-items-center h-100">
            <div class="col-3 header-image">
                <img src="~/Images/aspoeck-logo-sm.png"
                     class="img-fluid align-middle"
                     alt="Logo"/>
            </div>
            <div class="col-6 header-text">
                <h1 class="mb-0">Jausen Bestellung</h1>
            </div>
            <div class="col-3 text-center bg-warning py-2">
                <p class="mb-0 align-middle header-right-text">ADMINISTRATOR</p>
            </div>
        </div>
    </div>
</header>

<!-- Main content -->
<main class="py-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="d-flex justify-content-center mb-3">
                    @using (Html.BeginForm("Admin_Edit_List", "EditList", FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-warning">
                            <i class="fa-solid fa-list"></i>
                            Jausen Liste bearbeiten
                        </button>
                    }
                </div>
                <div class="d-flex justify-content-center mb-3">
                    @using (Html.BeginForm("Admin_Manage_Users", "ManageUsers", FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-warning btn-block">
                            <i class="fa-solid fa-users"></i>
                            User verwalten
                        </button>
                    }
                </div>
                <div class="d-flex justify-content-center mb-3">
                    @using (Html.BeginForm("Admin_ConfirmAllOrders", "Admin_ConfirmAllOrders", FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-warning btn-block">
                            <i class="fa-regular fa-credit-card"></i>
                            Zahlungen abschließen
                        </button>
                    }
                </div>
                <div class="d-flex justify-content-center mb-3">
                    @using (Html.BeginForm("Admin_Export_List_OrdersFromDay", "Admin", FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-success btn-block">
                            <i class="fa-solid fa-file-excel"></i>
                            Export für Tagesbestellung
                        </button>
                    }
                </div>
                <div class="d-flex justify-content-center mb-3">
                    @using (Html.BeginForm("Admin_Export_List_PayDay", "Admin", FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-success btn-block">
                            <i class="fa-solid fa-file-excel"></i>
                            Export für Zahltag
                        </button>
                    }
                </div>
                <div class="d-flex justify-content-center mb-3">
                    @using (Html.BeginForm("Logout", "Logout",  FormMethod.Post))
                    {
                          <button type="submit" class="btn btn-warning">
                              <i class="fa-solid fa-right-from-bracket"></i>
                              Abmelden
                          </button>
                      }
                </div>
                    
            </div>
            <div class="col-md-9 table-height">
                <div class="table-wrapper-scroll-y my-custom-scrollbar">
                    <table class="table table-bordered table-striped table-scroll">
                        <thead>
                        <tr>
                            <th>Nr</th>
                            <th>Datum</th>
                            <th>Benutzer</th>
                            <th>Inhalt</th>
                            <th>Status</th>
                            <th>Kosten</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (Model.Orders.IsNullOrEmpty())
                        {
                            <tr>
                                <td>Heute wurde noch nichts bestellt.</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        }
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>
                                    @if (order.OrderNumber != -1)
                                    {
                                        @order.OrderNumber
                                    }
                                </td>
                                <td>
                                    @order.Date
                                </td>
                                <td>
                                    @(order.UserName)
                                </td>
                                <td>
                                    @if (order.Description != "")
                                    {
                                        @order.Description
                                    }
                                </td>
                                <td>
                                    @(order.State)
                                </td>
                                <td>
                                    @order.Price.ToString("N2") €
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
                @using (Html.BeginForm("Admin_All_Orders", "AdminAllOrders", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-warning btn-block">Alle Bestellungen ansehen</button>
                }
            </div>
        </div>
        
    </div>
</main>
</body>
</html>