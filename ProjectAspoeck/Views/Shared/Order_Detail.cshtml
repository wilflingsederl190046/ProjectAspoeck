@using ProjectAspoeck.Models

@model ProjectAspoeck.Models.Home_PageModel
@{
    ViewData["Title"] = "Bestellung - Detailansicht";
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bestellung aufgeben</title>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        .container {
            margin-top: 50px;
        }

        img {
            max-width: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <p>Bestellung von <strong>Max Mustermann</strong></p>
                <p>am <strong>07.03.2023</strong></p>
            </div>
            <div class="col-6">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Bild</th>
                                <th>Bezeichnung</th>
                                <th>Preis</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <img src="https://via.placeholder.com/50x50.png?text=Bild+1"
                                         alt="Bild 1" />
                                </td>
                                <td>Semmel</td>
                                <td>1,20 €</td>
                            </tr>
                            <tr>
                                <td>
                                    <img src="https://via.placeholder.com/50x50.png?text=Bild+2"
                                         alt="Bild 2" />
                                </td>
                                <td>Brezel</td>
                                <td>2,40 €</td>
                            </tr>
                            <tr>
                                <td>
                                    <img src="https://via.placeholder.com/50x50.png?text=Bild+3"
                                         alt="Bild 3" />
                                </td>
                                <td>Semmel mit Butter</td>
                                <td>1,80 €</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <p>Anzahl Artikel: <strong>3</strong></p>
                <p>Preis insgesamt: <strong>5,40 €</strong></p>
                <p>Status: <strong>nicht bezahlt</strong></p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <a href="#" class="btn btn-warning">Zurück</a>
            </div>
        </div>
    </div>
</body>
</html>

