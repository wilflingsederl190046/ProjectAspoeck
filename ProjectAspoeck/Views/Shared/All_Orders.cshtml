
@using ProjectAspoeck.Models

@model ProjectAspoeck.Models.All_OrdersModel
@{
    ViewData["Title"] = "All Orders";
}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alle letzten Bestellungen</title>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <style>
        .container {
            margin-top: 50px;
        }

        img {
            max-width: 50px;
        }

        .header {
            height: 150px;
            display: flex;
            align-items: center;
            background-color: #f2f2f2;
        }

        .header-image {
            padding-left: 50px;
            padding-right: 50px;
            padding-top: 30px;
            padding-bottom: 30px;
        }

        .header-button {
            height: 100px
        }

        .header-text {
            text-align: center;
        }
    </style>
</head>
<body>
    <header class="bg-light py-3" style="height: 150px">
        <div class="container-fluid h-100">
            <div class="row align-items-center h-100">
                <div class="col-3 header-image">
                    <img src="path/to/image.jpg"
                         class="img-fluid align-middle"
                         alt="Logo" />
                </div>
                <div class="col-6 header-text">
                    <h1 class="mb-0">Jausen Bestellung</h1>
                </div>
                <div class="col-3 text-center py-2 ">
                    <span class="text-center-last-col ">
                        <button type="button" class="btn btn-lg">
                            <i class="fa fa-gear"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col">
                <h4>Alle letzten Bestellungen</h4>
            </div>
            <div class="col text-right">
                <small>06.03.2023</small>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <div class="form-group d-flex align-items-center">
                    <label for="filter" class="mr-3">Filter:</label>
                    <select class="form-control" id="filter" style="width: 150px;">
                        <option value="">Alle</option>
                        <option value="Semmel mit Butter">Semmel mit Butter</option>
                        <option value="Brezel">Brezel</option>
                        <option value="Kornspitz">Kornspitz</option>
                    </select>
                </div>
                <table class="table table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Datum</th>
                            <th scope="col" class="col-5">Inhalt</th>
                            <th scope="col">Status</th>
                            <th scope="col">Kosten</th>
                            <th scope="col" class="col-3">Erneut bestellen</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>06.03.2023</td>
                            <td>Semmel mit Butter</td>
                            <td>Bestellt</td>
                            <td>4,50 €</td>
                            <td class="d-flex justify-content-center">
                                <button class="btn btn-sm btn-outline-secondary ml-3">+</button>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>05.03.2023</td>
                            <td>Brezel</td>
                            <td>Geliefert</td>
                            <td>4,00 €</td>
                            <td class="d-flex justify-content-center">
                                <button class="btn btn-sm btn-outline-secondary ml-3">+</button>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>04.03.2023</td>
                            <td>Kornspitz</td>
                            <td>Storniert</td>
                            <td>2,00 €</td>
                            <td class="d-flex justify-content-center">
                                <button class="btn btn-sm btn-outline-secondary ml-3">+</button>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6 text-left">
                <input type="button" class="btn btn-warning" value="Zurück" onclick="history.back()" />
            </div>
            <div class="col-6 text-right">
                @using (Html.BeginForm("Order_Detail", "Home", new { sessionKey = Model.sessionString }, FormMethod.Post))
                        {
                <button href="#" class="btn btn-warning">Detailansicht aufrufen</button>
                        }
            </div>
        </div>
    </div>
</body>
</html>
