@model ProjectAspoeck.Models.SettingsModel
@{
    ViewData["Title"] = "Einstellung";
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Jausen Bestellung</title>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"/>
    <script src="https://kit.fontawesome.com/afdaaa5e13.js" crossorigin="anonymous"></script>

    <style>
        header {
            height: 150px;
            display: flex;
            align-items: center;
            background-color: #f2f2f2;
        }

        .header-image {
            padding-left: 50px;
            height: 100%;
        }

        img {
            max-width: 100%;
            max-height: 100%;
            display: block;
        }

        .header-text {
            text-align: center;
        }

        .btn {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .form-check-label {
            margin-left: 5px;
        }
        
        .div-email {
            width: 600px;
        }
        
        .border {
            width: 680px;
        }

        .selecters {
            display: inline-block;
            width: auto;
            margin-right: 5px;
        }

            .selecters + span {
                display: inline-block;
                width: auto;
            }
            
            form button:first-of-type {
              margin-right: auto;
            }

    </style>
</head>
<body>
<header class="bg-light py-3" style="height: 150px">
    <div class="container-fluid h-100">
        <div class="row align-items-center h-100">
            <div class="col-3 header-image">
                <img src="~/Images/aspoeck-logo-sm.png"
                     class="img-fluid align-middle"
                     alt="Logo"/>
            </div>
            <div class="col-6 header-text">
                <h1 class="mb-0">Jausen Bestellung</h1>
            </div>
            <div class="col-3 text-center py-2 ">
                <span class="header-button">
                    @using (Html.BeginForm("Home_Page", "Home", FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-lg">
                            <i class="fa-solid fa-home"></i>
                        </button>
                    }
                </span>
            </div>
        </div>
    </div>
</header>

<div class="container-fluid">
    <div class="row">
        <div class="col headline">
            <h4>Benachrichtigungen</h4>
        </div>
    </div>
    <form>
        <div class="form-group">
            <label for="email">E-Mail:<input type="email" value="@Model.Email" class="div-email" id="email" style="margin-left: 10px"/></label>
        </div>
        <div class="border p-3 d-inline-block">
            <p>
                <strong>Ich möchte vor Bestellungsschluss eine Benachrichtigung erhalten.</strong>
            </p>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="checkRTO" value="" checked="@Model.RememberToOrder">
                <label class="form-check-label" for="checkbox1">Ja</label>
            </div>
            <div class="form-group mt-3">
                <p>Wann möchtest du benachrichtigt werden?</p>
                <select class="form-control selecters" id="selectMinutesBefore">
                    <option>15</option>
                    <option>30</option>
                    <option>60</option>
                </select>
                <span>min vor 8:00</span>
            </div>
            <div class="form-group mt-3">
                <p>
                    <strong>Ich möchte über das Ende der Zahlungsfrist informiert werden.</strong>
                </p>
                <div class="form-check ">
                    <input type="checkbox" class="form-check-input" id="checkRTP" value="" checked="@Model.RememberToPay">
                    <label class="form-check-label" for="checkbox2">Ja</label>
                </div>
            </div>
            <div class="form-group mt-3">
                <p>Wann möchtest du benachrichtigt werden?</p>
                <select class="form-control selecters" id="selectDaysBefore">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                </select>
                <span>Tag(e) vor Ende des Monats</span>
            </div>
            <script>
                    var comboBox = document.getElementById("selectMinutesBefore");
                    comboBox.value = @Model.MinutesBefore;

                    comboBox = document.getElementById("selectDaysBefore");
                    comboBox.value = @Model.DaysBefore;
                </script>
        </div>

    </form>
    <form>
        @using (Html.BeginForm("BackToLastPage", "FromPageToPage", FormMethod.Post))
        {
            <button type="submit" class="btn btn-warning">Zurück</button>
        }
        <button id="saveSettings" type="submit" class="btn btn-warning">Speichern</button>
    </form>
</div>
</body>
</html>

@section Scripts
{
    <script>
        document.getElementById("saveSettings").addEventListener("click", function (event) {
            event.preventDefault();
            let emailField = document.getElementById("email");
            const emailValue = emailField.value;

            let checkBoxRTO = document.getElementById("checkRTO");
            const checkRTOValue = checkBoxRTO.checked;

            let checkBoxRTP = document.getElementById("checkRTP");
            const checkRTPValue = checkBoxRTP.checked;

            let optionalTimeBefore = document.getElementById("selectMinutesBefore");
            const minutesBeforeValue = parseInt(optionalTimeBefore.value);

            let optionalTimeDays = document.getElementById("selectDaysBefore");
            const daysBeforeValue = parseInt(optionalTimeDays.value);

            $.ajax({
                url: "@Url.Action("SaveSettings", "Settings")",
                method: "POST",
                data: {
                    email: emailValue,
                    rto: checkRTOValue,
                    rtp: checkRTPValue,
                    minBef: minutesBeforeValue,
                    daysBef: daysBeforeValue
                },
                success: function (response) {
                    window.location.href = '@Url.Action("Home_Page", "Home")';
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log(textStatus, errorThrown);
                }
            });
        });
    </script>
}