@using ProjectAspoeck.Models

@model ProjectAspoeck.Models.SettingsModel
@{
    ViewData["Title"] = "Einstellung";
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Jausen Bestellung</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="https://code.jquery.com/jquery-latest.min.js"></script>

    <!-- Custom CSS -->
    <style>
        .header {
            height: 150px;
            display: flex;
            align-items: center;
            background-color: #f2f2f2;
        }

        .header-image {
            padding-left: 50px;
            height: 100%;
        }

        .text-center-last-col {
            display: flex;
            justify-content: center;
        }

        img {
            max-width: 100%;
            max-height: 100%;
            display: block;
        }

        .header-text {
            text-align: center;
        }

        .headline {
            /*padding-top: 10px;*/
        }

        .btn {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .form-check-label {
            margin-left: 5px;
        }

        .div-email,
        .border {
            width: 680px;
        }

        .selecters {
            width: fit-content;
            display: inline-block;
            width: auto;
            margin-right: 5px;
        }

            .selecters + span {
                display: inline-block;
                width: auto;
            }
    </style>
</head>
<body>
    <header class="bg-light py-3" style="height: 150px">
        <div class="container-fluid h-100">
            <div class="row align-items-center h-100">
                <div class="col-3 header-image">
                    <img src="~/Images/aspoeck-logo-sm.png"
                         class="img-fluid align-middle"
                         alt="Logo" />
                </div>
                <div class="col-6 header-text">
                    <h1 class="mb-0">Jausen Bestellung</h1>
                </div>
                <div class="col-3 text-center py-2 ">
                    <span class="header-button">
                        @using (Html.BeginForm("Home", "Settings", new { sessionKey = Model.SessionString }, FormMethod.Post))
                        {
                            <button type="submit" class="btn btn-lg">
                                <i class="fa fa-house"></i>
                            </button>
                        }
                    </span>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <div class="col headline">
                <h4>Benachrichtigungen</h4>
            </div>
        </div>
        <form>
            <div class="form-group">
                <label for="email">E-Mail:</label>
                <input type="email" value="@Model.Email" class="form-control div-email" id="email" />
            </div>
            <div class="border p-3 d-inline-block">
                <p><strong>Ich möchte vor Bestellungsschluss eine Benachrichtigung erhalten.</strong></p>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="checkRTO" value="" checked="@Model.RememberToOrder">
                    <label class="form-check-label" for="checkbox1">Ja</label>
                </div>
                <div class="form-group mt-3">
                    <p>Wann möchtest du benachrichtigt werden?</p>
                    <select class="form-control selecters" id="selectMinutesBefore">
                        <option>15</option>
                        <option>30</option>
                        <option>60</option>
                    </select>
                    <span>min vor 8:00</span>
                </div>
                <div class="form-group mt-3">
                    <p><strong>Ich möchte über das Ende der Zahlungsfrist informiert werden.</strong></p>
                    <div class="form-check ">
                        <input type="checkbox" class="form-check-input" id="checkRTP" value="" checked="@Model.RememberToPay">
                        <label class="form-check-label" for="checkbox2">Ja</label>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <p>Wann möchtest du benachrichtigt werden?</p>
                    <select class="form-control selecters" id="selectDaysBefore">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                    </select>
                    <span>Tag(e) vor Ende des Monats</span>
                </div>
                <script>
                    var comboBox = document.getElementById("selectMinutesBefore");
                    comboBox.value = @Model.MinutesBefore;

                    comboBox = document.getElementById("selectDaysBefore");
                    comboBox.value = @Model.DaysBefore;
                </script>
            </div>

        </form>

        <button id="saveSettings" type="submit" class="btn btn-warning mt-3">Speichern</button>

        <script>
            document.getElementById("saveSettings").addEventListener("click", function (event) {
                event.preventDefault();
                var emailField = document.getElementById("email");
                var emailValue = emailField.value;

                var checkBoxRTO = document.getElementById("checkRTO");
                var checkRTOValue = checkBoxRTO.checked;

                var checkBoxRTP = document.getElementById("checkRTP");
                var checkRTPValue = checkBoxRTP.checked;

                var optionalTimeBefore = document.getElementById("selectMinutesBefore");
                var minutesBeforeValue = parseInt(optionalTimeBefore.value);

                var optionalTimeDays = document.getElementById("selectDaysBefore");
                var daysBeforeValue = parseInt(optionalTimeDays.value);

                $.ajax({
                    url: "@Url.Action("SaveSettings", "Home")",
                    method: "POST",
                    data: {
                        email: emailValue,
                        rto: checkRTOValue,
                        rtp: checkRTPValue,
                        minBef: minutesBeforeValue,
                        daysBef: daysBeforeValue
                    },
                    success: function (response) {
                        window.location.href = '@Url.Action("Home_Page", "Home", new { sessionKey = Model.SessionString })';
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.log(textStatus, errorThrown);
                    }
                });
            });
        </script>



    </div>
</body>
</html>