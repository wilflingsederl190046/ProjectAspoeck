@using ProjectAspoeck.Models

@model ProjectAspoeck.Models.Home_PageModel
@{
    ViewData["Title"] = "Bestellung aufgeben";
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bestellung aufgeben</title>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        .container {
            margin-top: 50px;
        }

        img {
            max-width: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <h4>Angebot vom Montag 6 März 2023:</h4>
            </div>
            <div class="col text-right">
                <small>06.03.2023</small>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <div class="form-group d-flex align-items-center">
                    <select class="form-control" id="filter" style="width: 150px">
                        <option value="">Alle</option>
                        <option value="Semmel mit Butter">Semmel mit Butter</option>
                        <option value="Brezel">Brezel</option>
                        <option value="Kornspitz">Kornspitz</option>
                    </select>
                    <input type="text" class="form-control mr-2" placeholder="Suche..." id="search" style="margin-left: 20px;">
                </div>
                <table class="table table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Bild</th>
                            <th scope="col">Bezeichnung</th>
                            <th scope="col">Kosten</th>
                            <th scope="col">Stück</th>
                            <th scope="col" class="col-1">Hinzufügen</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">
                                <img src="https://via.placeholder.com/50x50.png?text=Semmel"
                                     alt="Semmel" />
                            </th>
                            <td>Semmel mit Butter</td>
                            <td>4,50 €</td>
                            <td>1</td>
                            <td class="d-flex justify-content-center">
                                <button class="btn btn-sm btn-outline-secondary ml-3">+</button>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <img src="https://via.placeholder.com/50x50.png?text=Semmel"
                                     alt="Semmel" />
                            </th>

                            <td>Brezel</td>
                            <td>4,00 €</td>
                            <td>4</td>
                            <td class="d-flex justify-content-center">
                                <button class="btn btn-sm btn-outline-secondary ml-3">+</button>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <img src="https://via.placeholder.com/50x50.png?text=Semmel"
                                     alt="Brezel" />
                            </th>
                            <td>Brezel</td>
                            <td>4,00 €</td>
                            <td>3</td>
                            <td class="d-flex justify-content-center">
                                <button class="btn btn-sm btn-outline-secondary ml-3">+</button>
                            </td>
                        </tr>

                    </tbody>

                    </tbody>
                </table>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6 text-left">
                <a href="#" class="btn btn-warning">Zurück</a>
            </div>
            <div class="col-6 text-right">
                <a href="#" class="btn btn-success">Warenkorb</a>
            </div>
        </div>
    </div>
</body>
</html>