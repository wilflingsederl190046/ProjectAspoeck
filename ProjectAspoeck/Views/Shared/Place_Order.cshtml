        }

        .header {
            height: 150px;
            display: flex;
            align-items: center;
            background-color: #f2f2f2;
        }

        .header-image {
            padding-left: 50px;
            padding-right: 50px;
            padding-top: 30px;
            padding-bottom: 30px;
        }

        .header-button {
            height: 100px
        }

        .header-text {
            text-align: center;
        }
    </style>
</head>
<body>
    <header class="bg-light py-3" style="height: 150px">
        <div class="container-fluid h-100">
            <div class="row align-items-center h-100">
                <div class="col-3 header-image">
                   @*<img src="~/Images/aspoeck-logo-sm.png"
             class="img-fluid align-middle"
             alt="Logo" />*@ 
                </div>
                <div class="col-6 header-text">
                    <h1 class="mb-0">Jausen Bestellung</h1>
                </div>
                <div class="col-3 text-center py-2 ">
                    <span class="text-center-last-col ">
                        <button type="button" class="btn btn-lg">
                            <i class="fa fa-gear"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </header>       
    <div class="container">
        <div class="row">
            <div class="col">
                <h4>Angebot vom Montag 6 März 2023:</h4>
            </div>
            <div class="col text-right">
                <small>06.03.2023</small>
            </div>
        </div>
        <form method="post"> </form>
        <div class="row mt-3">
            <div class="col">
                <div class="form-group d-flex align-items-center">
                    <select class="form-control" id="filter" style="width: 150px">
                        <option value="">Alle</option>
                        <option value="Semmel mit Butter">Semmel mit Butter</option>
                        <option value="Brezel">Brezel</option>
                        <option value="Kornspitz">Kornspitz</option>
                    </select>
                    <input type="text" class="form-control mr-2" placeholder="Suche..." id="search" style="margin-left: 20px;">
                </div>
                <table class="table table-bordered" id="productTable">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Bild</th>
                            <th scope="col">Bezeichnung</th>
                            <th scope="col">Kosten</th>
                            <th scope="col">Stück</th>
                            <th scope="col" class="col-1">Hinzufügen / Entfernen</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.orderItems)
                        {
                            <tr>
                                <th scope="row">
                                    <img src="@item.ImageUrl" alt="@item.Bezeichnung" />
                                </th>
                                <td class="itemName">@item.Bezeichnung</td>
                                <td>@item.Kosten</td>
                                <td class="stueck">@item.Units</td> <!-- add a class name to the Stück cell for easier selection -->
                                <td class="d-flex justify-content-center">
                                    <button class="btn btn-sm btn-outline-secondary ml-3 plus-button"   onclick="getData()"value="@Model.PlusButton">+</button> <!-- add a class name to the plus button for easier selection -->
                                </td>
                                <td class="d-flex justify-content-center">
                                    <button class="btn btn-sm btn-outline-secondary ml-3 minus-button">-</button> <!-- add a class name to the plus button for easier selection -->
                                </td>
                            </tr>
                        }
                        <script>
                            

                            // select all the plus buttons on the page
                            const plusButtons = document.querySelectorAll('.plus-button');
                            const minusButtons = document.querySelectorAll('.minus-button');


                            // loop through each button and add an event listener
                            plusButtons.forEach(button => {
                                button.addEventListener('click', () => {
                                    // get the corresponding Stück cell
                                    const stueckCell = button.parentElement.previousElementSibling

                                    // get the current Stück value and increment it by one
                                    let currentStueck = parseInt(stueckCell.textContent);
                                    currentStueck += 1;

                                    // update the Stück cell with the new value
                                    stueckCell.textContent = currentStueck;
                                });
                            });

                            minusButtons.forEach(button => {
                                button.addEventListener('click', () => {
                                    // get the corresponding Stück cell
                                    const stueckCell = button.parentElement.previousElementSibling.previousElementSibling

                                    // get the current Stück value and decrement it by one
                                    let currentStueck = parseInt(stueckCell.textContent);
                                    currentStueck -= 1;

                                    // make sure the Stück value is at least 0
                                    currentStueck = Math.max(currentStueck, 0);

                                    // update the Stück cell with the new value
                                    stueckCell.textContent = currentStueck;
                                });
                            });
                            function getData() {

                                
                                // Get the item unit and name
                                const itemUnit = document.querySelector(".stueck").innerText;
                                const itemName = document.querySelector(".itemName").innerText;

                                // Do something with the item unit and name, such as add it to the cart
                               // alert("You have added " + itemUnit + " x " + itemName + " to your shopping cart!");
                            }
                        </script>                        
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6 text-left">
                <a href="#" class="btn btn-warning">Zurück</a>
            </div>
            <div class="col-6 text-right">
                @*<button type="button" class="btn btn-success" id="warenkorbButton" onclick="submitForm()">Warenkorb</button>*@
                
                    @using (Html.BeginForm("Shopping_Basket", "Home", new { sessionKey = Model.SessionString }, FormMethod.Post))
                    {
                        @foreach (var item in Model.orderItems)
                        {
                            @Html.HiddenFor(orderItem => item.Units)
                            @Html.HiddenFor(orderItems => item.Kosten)
                            @Html.HiddenFor(orderItems => item.Bezeichnung)
                        }

                        <button type="submit" href="#" class="btn btn-success" onclick="submitForm()">Warenkorb</button>
                    }
              
                                                  
            </div>    
            
        </div>
    </div>
    <script>
        function submitForm() {
            // Collect data from the table and create a JSON object
            const productTable = document.getElementById('productTable');
            const rows = productTable.rows;
            const orderItems = [];
            for (let i = 1; i < rows.length; i++) {
                const cells = rows[i].cells;
                const orderItem = {
                    name: cells[0].textContent,
                    price: cells[1].textContent,
                    quantity: cells[2].textContent
                };
                orderItems.push(orderItem);
            }
            alert("You have added " + orderItems);

            JSON orderJson = JSON.stringify(orderItems);
            const form = document.getElementById("myForm");
            const input = document.createElement("input");
            input.setAttribute("type", "hidden");
            input.setAttribute("name", "orderJson");
            input.setAttribute("value", orderJson); // corrected variable name
            form.appendChild(input);
            form.submit();
        }
    </script>
</body>

</html>


