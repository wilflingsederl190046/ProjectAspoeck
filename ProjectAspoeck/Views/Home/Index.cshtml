@model ProjectAspoeck.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex flex-column align-items-center">
    
    @*<img src="Images\aspoeck-systems_logo_7zu5.png" class="img-responsive mb-5" alt="Logo">*@
    <img src="Images\aspoeck-systems_logo_7zu5.png" class="img-fluid" alt="Logo">
    @*<form class="d-flex flex-column align-items-center">*@
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            if (ViewBag.LoginStatus != null)
            {
                if (ViewBag.LoginStatus == 0)
                {
                    <div class="alert alert-danger">Invalid login detail</div>
                }
            }
            <div class="form-group mb-3">
                <label for="username">Username:</label>
               @* <input type="text" class="form-control" id="username">*@
                @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "username" })
            </div>
            <div class="form-group mb-3">
                <label for="password">Password:</label>
                @*<input type="password" class="form-control" id="password">*@
                @Html.PasswordFor(m => m.Pasword, new { @class = "form-control", @placeholder = "passwort" })

            </div>
            <button type="submit" class="btn btn-primary" asp-page="/Home_Page">
                Login
            </button>
        }
    @*</form>*@
</div>